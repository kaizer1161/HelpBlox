<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dsd.informme.com.helpblox">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/signupPage"
            android:theme="@style/SignupTheme" />
        <activity
            android:name=".CategoryActivity"
            android:label="@string/categoryPage"
            android:theme="@style/SignupTheme" />
        <activity android:name=".ProfilePicActivity" />
        <activity
            android:name=".NewsFeed"
            android:label="@string/title_activity_news_feed"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>